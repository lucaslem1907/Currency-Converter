<Window x:Class="Currency_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency_Converter" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Currency Converter" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <TabControl x:Name="tbmain" TabStripPlacement="Top">
        <TabItem Name="tbConverter" Header="Converter">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                    <Label Content="Currency Converter" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Foreground="#FF993F3F" />
                    <Label Name="Currency_Lbl" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                </StackPanel>
                <Border Grid.Row="1" Width="600" Grid.Column="0" Grid.ColumnSpan="5" CornerRadius="10" BorderThickness="5" Background="Black">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#ec2075" Offset="0"/>
                            <GradientStop Color="#f33944" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Rectangle Grid.Row="1">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ec2075" Offset="0"/>
                                <GradientStop Color="#f33944" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>

                    </Rectangle>
                </Border>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="516" Margin="0,16,0,0">
                    <Label Content="Amount" Margin="0,0,100,0" Width="120" Height="28" BorderBrush="#FFBE684C" RenderTransformOrigin="0.516,0.535" Foreground="#FFFFFBFB"/>
                    <Label Content="From" Width="120" Height="28" BorderBrush="#FFBE684C" RenderTransformOrigin="0.516,0.535" Margin="-3,0,0,0" Foreground="#FFFFFBFB" />
                    <Label Content="To" Margin="57,0,0,0" Width="120" Height="28" BorderBrush="#FFBE684C" RenderTransformOrigin="0.516,0.535" Foreground="#FFFFFBFB"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox Name="input" PreviewTextInput="input_PreviewTextInput" Text="" Margin="0,0,60,0" TextWrapping="Wrap" Width="120" Height="20" HorizontalAlignment="Left" BorderBrush="#FFBE684C"/>
                    <ComboBox x:Name="Currency_combobox" Text="Test" Margin="0,0,0,0" Width="120" Height="20" HorizontalAlignment="Left" BorderBrush="#FFBE684C"/>
                    <fa:ImageAwesome Icon="Exchange" Height="17" Width="60" RenderTransformOrigin="0.812,0.5"/>
                    <ComboBox x:Name="Currency_combobox1" Text="Test" Width="120" Height="20" BorderBrush="#FFBE684C"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
                    <Button x:Name="Cvrt_bttn" Content="Convert" Width="100" Click="Cvrt_bttn_Click"  Height="30" Style="{StaticResource ButtonRound}" BorderBrush="#FFF02222" Foreground="White">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#ec2075" Offset="0"/>
                                <GradientStop Color="#FFFF1200" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Clear_bttn" Content="Clear" Width="100" Margin="50,0,0,0" Height="30" Style="{StaticResource ButtonRound}" Click="Clear_bttn_Click" Foreground="White">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#ec2075" Offset="0"/>
                                <GradientStop Color="#FFFF1200" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <Label Name="Error_label" Grid.Row="3" Grid.Column="2" Content="" VerticalAlignment="Center" HorizontalAlignment="Center" />


            </Grid>
        </TabItem>
        <TabItem Name="tbControl" Header="Control">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                    <Label Content="Currency Converter" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" Foreground="#FF993F3F" />
                    <Label Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                </StackPanel>
                <Border Grid.Row="1" Width="600" Grid.Column="0" Grid.ColumnSpan="5" CornerRadius="10" BorderThickness="5" Background="Black">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#ec2075" Offset="0"/>
                            <GradientStop Color="#f33944" Offset="0.5"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Rectangle Grid.Row="1">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ec2075" Offset="0"/>
                                <GradientStop Color="#f33944" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>

                    </Rectangle>
                </Border>


                <Label Content="Amount" Height="28" BorderBrush="#FFBE684C" RenderTransformOrigin="0.516,0.535" Foreground="#FFFFFBFB" Grid.Column="1" Grid.ColumnSpan="2" Margin="29,12,153,60" Grid.Row="1"/>
                <Label Content="Currency Name" Height="28" BorderBrush="#FFBE684C" RenderTransformOrigin="0.516,0.535" Foreground="#FFFFFBFB" Grid.Column="2" Grid.ColumnSpan="2" Margin="163,12,29,60" Grid.Row="1"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox x:Name="Amount" PreviewTextInput="input_PreviewTextInput" Text="" Margin="0,0,60,0" TextWrapping="Wrap" Width="170" Height="20" BorderBrush="#FFBE684C"/>
                    <TextBox x:Name="Currency" Margin="0,0,0,0" Width="162" Height="20" BorderBrush="#FFBE684C"/>


                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="0,0,0,50">
                    <Button x:Name="Save_bttn" Content="Save" Width="100" Click="Save_bttn_Click"  Height="30" Style="{StaticResource ButtonRound}" BorderBrush="#FFF02222" Foreground="White">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#ec2075" Offset="0"/>
                                <GradientStop Color="#FFFF1200" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="Cancel_bttn" Content="Cancel" Width="100" Margin="50,0,0,0" Height="30" Style="{StaticResource ButtonRound}" Click="Cancel_bttn_Click" Foreground="White">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#ec2075" Offset="0"/>
                                <GradientStop Color="#FFFF1200" Offset="0.5"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <Label Name="Error_Label_Data" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="450" HorizontalContentAlignment="Center" />
                <DataGrid x:Name="Dgv_CurrencyMaster" Grid.Row="2" Grid.Column="1" Margin="0,64,0,0" Grid.RowSpan="2" IsReadOnly="true" RowHeight="28"
                          SelectionUnit="Cell" SelectedCellsChanged="DataGrid_SelectedCellsChanged" HorizontalScrollBarVisibility="Auto" AutoGenerateColumns="False" Grid.ColumnSpan="3">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" x:Name="Id" Visibility="Hidden" CanUserResize="False" Width="auto" Binding="{Binding Path=Id}"/>
                        <DataGridTemplateColumn Width="70" Header="" IsReadOnly="True" DisplayIndex="0">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="/Images/edit.png" ToolTip="edit" Width="16" Height="16" Stretch="Uniform"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="70" Header="" IsReadOnly="True" DisplayIndex="1">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="/Images/delete-file.png" ToolTip="delete" Width="25" Height="25" Stretch="Uniform"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Currency Name" Width="*" Binding="{Binding Path=CurrencyName}"/>

                        <DataGridTextColumn Header="Amount" Width="*" Binding="{Binding Path=Amount}"
                                            CanUserReorder="False" CanUserResize="False" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </TabItem>
    </TabControl>

</Window>
